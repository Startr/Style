    /* Toggle switch style - Much wider and more switch-like */
    .toggle-checkbox {
      width: 60px;
      height: 30px;
      border-radius: 15px;
      background: #ccc;
      border: 2px solid #999;
      position: relative;
      transition: all 0.3s ease;
    }

    .toggle-checkbox:checked {
      background: var(--primary);
      border-color: var(--primary);
